# OpenRouter API Key (REQUIRED for real GenAI)
OPENROUTER_API_KEY=ENTER_YOUR_API_KEY_HERE

# OpenRouter Model (Free models available)
# Options:
# raptor/raptor-mini:preview (Recommended for low-latency client use)
# meta-llama/llama-3.3-70b-instruct:free
# google/gemma-2-9b-it:free
# mistralai/mistral-7b-instruct:free
# qwen/qwen-2.5-32b-instruct:free
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Your Site Info (for OpenRouter rankings - optional)
SITE_URL=http://localhost:5000
SITE_NAME=GenAI Smart Lock System

# Security Settings
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Face Recognition Threshold
FACE_THRESHOLD=0.7

# Voice Recognition Threshold
VOICE_THRESHOLD=0.65

# Server Settings
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
